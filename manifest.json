{
  "manifest_version": 3,
  "name": "Check My Link",
  "version": "1.0",
  "description": "Alpha Ã©valuation des contenus sur le web",
  "action": {
    "default_popup": "accueil/accueil.html",
    "default_icon": {
      "48": "images/icon48.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "<all_urls>",
    "https://9377-87-121-211-134.ngrok-free.app/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "check-my-link@example.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "accueil/modules/tooltip.js",
        "accueil/modules/scores.js",
        "accueil/extract_link.js"
      ],
      "css": ["accueil/infobulles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["accueil/infobulles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
